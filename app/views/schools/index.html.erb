<% @schools.each do |school| %>
  <%= school.name %>

  <!-- Remember to pass the school object or school id to school_path method. Otherwise, it won't work! -->
  <%= link_to "Info", school_path(school), class: "btn btn-info" %>
  |
  <%= link_to "edit", edit_school_path(school), class: "btn btn-primary" %>
  |
  <%= link_to "Destroy", school_path(school), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
<br>
<% end %>

<p>
  <%= link_to "Create new school", new_school_path, class: "btn btn-primary" %>
</p>

<p>
  <%= link_to "Home", root_path, class: "btn btn-primary" %>
</p>
